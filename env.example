# ZGR SAM Document Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8000
ENV=dev

# RAG API Configuration
# Docker içinden erişim için: http://rag_api:8000
# Host makineden erişim için: http://localhost:8001
RAG_API_URL=http://rag_api:8000
RAG_API_TIMEOUT=300

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=zgr
POSTGRES_PASSWORD=your_actual_password_here
POSTGRES_DB=zgrbid
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
LLM_PROVIDER=ollama
OLLAMA_HOST=http://host.docker.internal:11434
GENERATOR_MODEL=llama3
EXTRACTOR_MODEL=llama3

# OpenAI Configuration (if using OpenAI instead of Ollama)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# SAM.GOV API CONFIGURATION
# =============================================================================
SAM_API_KEY=your_sam_api_key_here
SAM_ENABLED=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=ZGR SAM System

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for session management
SECRET_KEY=your_secret_key_here

# File upload security
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,xlsx,xls

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_BASE_DELAY=1.0
RATE_LIMIT_MAX_DELAY=32.0
RATE_LIMIT_MAX_RETRIES=5

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
DOWNLOAD_PATH=./downloads
TEMP_PATH=./temp
MAX_CONCURRENT_PROCESSING=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Success rate threshold for alerts
SUCCESS_RATE_THRESHOLD=80.0

# Processing time threshold for alerts (seconds)
PROCESSING_TIME_THRESHOLD=15.0

# API health check interval (seconds)
API_HEALTH_CHECK_INTERVAL=300

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Email notifications
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_EMAIL=admin@yourcompany.com

# Slack notifications (optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_url_here
# SLACK_CHANNEL=#alerts

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development mode
DEBUG=false

# Enable detailed logging
VERBOSE_LOGGING=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Set to true for production mode
PRODUCTION=false

# Enable security features
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate API keys regularly
# 4. Monitor log files for security issues
# 5. Keep this file updated with new configuration options